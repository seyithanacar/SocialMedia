@model SocialMedia.Models.Post


<title>Gönderi Oluştur</title>
<!-- Bootstrap CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/css/bootstrap.min.css">

<form method="post"  action="@Url.Action("PostEkle", "Post")" enctype="multipart/form-data" >

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Ne düşünüyorsunuz?</h5>
                        @Html.Raw(ViewBag.Message)
                        <div class="mb-3">
                            @Html.TextAreaFor(x => x.PostContent, 5, 1, new { @class = "form-control", @placeholder = "Bir şeyler yazın..." })

                        </div>
                        <div class="mb-3">

                            <input type="file" name="filename" class="form-control-file" id="fileInput">

                        </div>
                        <button type="submit" class="btn btn-primary">Paylaş</button>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<!-- Bootstrap JS and Popper.js (required for Bootstrap) -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/js/bootstrap.bundle.min.js"></script>


