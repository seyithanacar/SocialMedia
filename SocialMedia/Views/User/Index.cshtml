@model SocialMedia.Models.PostDetayModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/User_Layout.cshtml";
}

<form method="post" action="@Url.Action("PostEkle", "User")" enctype="multipart/form-data">
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Ne düşünüyorsunuz?</h5>
                        @Html.Raw(ViewBag.Message)
                        <div class="mb-3">
                            @Html.TextAreaFor(x => x.SinglePost.PostContent, 5, 1, new { @class = "form-control", @placeholder = "Bir şeyler yazın..." })
                        </div>
                        <div class="mb-3">
                            <input type="file" name="filename" class="form-control-file" id="fileInput">
                        </div>
                        <button type="submit" class="btn btn-primary">Paylaş</button>
                    </div>
                </div>
            </div>
        </div>  
    </div>
</form>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <!-- Gönderi Alanı -->
            <div class="card">
                @if (Model != null)
                {
                    foreach (var x in Model.PostList)
                    {
                        <div class="card mb-3">
                            <div class="row no-gutters">
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <a href="/User/Profile/@x.UserId" class="card-link">
                                            <h5 class="card-title">@x.User.UserName @x.User.UserSurname</h5>
                                        </a>
                                        <a href="/Post/PostDetay/@x.PostId">
                                            <img src="@x.Images.ImageAdress" class="card-img-top" alt="">
                                            <p class="card-text">@x.PostContent</p>
                                        </a>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="btn-group">
                                                <a href="#" class="btn btn-sm btn-outline-primary">Beğen</a>
                                                <a href="#" class="btn btn-sm btn-outline-secondary">Yorum Yap</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
 


