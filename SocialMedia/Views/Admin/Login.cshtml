
@model SocialMedia.Models.Admin
@{
    Layout = null;
}



< !DOCTYPE html >

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin Girişi</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-4 offset-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title text-center">Admin Girişi</h5>
                        <form method="post">
                            <div class="form-group">
                                <label for="username">Kullanıcı Adı</label>
                                @Html.TextBoxFor(x => x.AdminMail, new { @type = "text", @class = "form-control", @id = "username", @placeholder = "Kullanıcı adınızı girin" })
                            </div>
                            <div class="form-group">
                                <label for="password">Şifre</label>
                                @Html.TextBoxFor(x => x.AdminMail, new { @type = "password", @class = "form-control", @id = "password", @placeholder = "Şifrenizi girin" })
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS ve jQuery (Bootstrap modülleri için gerekli) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
