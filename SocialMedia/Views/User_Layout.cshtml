
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>User_Layout</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">



</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">SocialMedia</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Anasayfa <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Follower/Followers/@Session["userid"]">Takipçiler</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Follower/FollowRequests/@Session["userid"]">Takip İstekleri</a>
                </li>
               
                <li class="nav-item">
                    <a class="nav-link" href="#">Etkinlikler</a>
                </li>
            </ul>
            <form class="form-inline ml-auto">
                <input class="form-control mr-sm-2" type="search" placeholder="Ara" aria-label="Search">
                <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Ara</button>
            </form>
            <ul class="navbar-nav ml-4">
                <li class="nav-item dropdown">
                    
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        @Session["ad_soyad"]
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="/User/MyProfile">Profilim</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Çıkış Yap</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Messaage/Messages/@Session["userid"]">Messenger</a>
                </li>

            </ul>
        </div>
    </nav>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.2/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


    <div>
        @RenderBody()
    </div>
</body>
</html>
